{
  "name": "kafka-demo",
  "version": "1.0.0",
  "description": "Kafka event-driven order processing demo",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "start:payment": "node consumers/paymentConsumer.js",
    "start:inventory": "node consumers/inventoryConsumer.js",
    "start:notification": "node consumers/notificationConsumer.js",
    "start:all-consumers": "concurrently \"npm run start:payment\" \"npm run start:inventory\" \"npm run start:notification\"",
    "dev": "nodemon server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "kafkajs": "^2.2.4",
    "uuid": "^9.0.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1"
  }
}